{
  "compilerOptions": {
    "outDir": "./built",
    "allowJs": true,
    "target": "es2022",
    "moduleResolution": "nodenext",
    "module": "nodenext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "declaration": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
