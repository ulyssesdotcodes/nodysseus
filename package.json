{
  "name": "nodysseus",
  "description": "A generic node-based editor. Built with hyperapp.",
  "version": "1.0.38",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@gitlab.com/ulysses.codes/nodysseus.git"
  },
  "keywords": [
    "node-based-editor",
    "vpl",
    "hyperapp"
  ],
  "author": "Ulysses Popple",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://gitlab.com/ulysses.codes/nodysseus/issues"
  },
  "homepage": "https://gitlab.com/ulysses.codes/nodysseus#readme",
  "scripts": {
    "package": "esbuild ./src/index.js --bundle --outfile=public/index.bundle.js --sourcemap --target=es2020 --external:node:https ",
    "watch": "concurrently --raw \"npm run run:esbuild\" \"http-server -s\" \"tsc --watch --noEmit\"",
    "test": "node node_modules/jest/bin/jest.js",
    "test:watch": "node node_modules/jest/bin/jest.js --watch",
    "run:esbuild": "esbuild ./src/index.js --bundle --outfile=public/index.bundle.js --sourcemap --target=es2020 --external:node:https --watch"
  },
  "dependencies": {
    "@codemirror/lang-javascript": "^6.0.1",
    "@codemirror/lang-markdown": "^6.0.4",
    "@codemirror/state": "^6.1.0",
    "@codemirror/view": "^6.0.2",
    "@swc/core": "^1.3.20",
    "@swc/wasm-web": "^1.3.21",
    "@typescript-eslint/typescript-estree": "^5.45.0",
    "acorn": "^8.8.1",
    "codemirror": "^6.0.1",
    "d3-force": "^3.0.0",
    "fs-web": "^1.0.1",
    "fuse.js": "^6.4.6",
    "hyperapp": "^2.0.22",
    "idb": "^7.1.0",
    "just-safe-get": "^4.0.1",
    "just-safe-set": "^4.0.1",
    "lokijs": "^1.5.12",
    "panzoom": "^9.4.2",
    "typescript": "4.8"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^23.0.3",
    "@rollup/plugin-json": "^5.0.2",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@swc/jest": "^0.2.23",
    "@types/d3-force": "^3.0.3",
    "@types/lokijs": "^1.5.7",
    "brace-expansion": "^2.0.1",
    "concurrently": "^7.3.0",
    "esbuild": "^0.15.16",
    "esbuild-jest": "^0.5.0",
    "http-server": "^14.1.1",
    "jest": "^29.3.1",
    "rollup": "^3.5.0",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-globals": "^1.4.0",
    "rollup-plugin-sourcemaps": "^0.6.3",
    "rollup-plugin-swc": "^0.2.1",
    "rollup-plugin-typescript": "^1.0.1",
    "sourcemap-codec": "^1.4.8",
    "swc-loader": "^0.2.3",
    "ts-loader": "^9.4.1",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.0"
  },
  "jest": {
    "transform": {
      "^.+\\.(t|j)sx?$": [
        "esbuild-jest",
        {
          "sourceMap": true,
          "target": "es2022"
        }
      ]
    }
  }
}
